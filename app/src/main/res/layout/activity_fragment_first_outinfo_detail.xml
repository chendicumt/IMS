<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_first_out_detail_toolBar"
            android:background="@drawable/toolbar_line"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_first_out_detail_title"
                        android:textColor="@color/OutInfoDetailTitle"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                    />
                </LinearLayout>

                <TextView
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/OutInfoDetailBg">

        <LinearLayout
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/OutInfoDetailSonBg">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="姓    名"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/out_detail_name"
                    android:layout_weight="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入姓名"
                    android:textColorHint="@color/textHitColor2"
                    android:imeOptions="actionNext"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/outInfoRecyclerLine"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="目的地"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/out_detail_address"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:hint="请输入目的地"
                    android:textColorHint="@color/textHitColor2"
                    android:imeOptions="actionNext"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/outInfoRecyclerLine"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/out_detail_startTime"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入开始日期"
                    android:onClick="outDetaiStartTimeBtn"
                    android:textColorHint="@color/textHitColor2"
                    android:focusableInTouchMode="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/outInfoRecyclerLine"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="计划结束时间"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/out_plan_endTime"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="date"
                    android:hint="请输入计划结束日期"
                    android:onClick="outDetailPlanEndTimeBtn"
                    android:textColorHint="@color/textHitColor2"
                    android:focusableInTouchMode="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/outInfoRecyclerLine"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="实际结束时间"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/out_real_endTime"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="date"
                    android:hint="请输入实际结束日期"
                    android:textColorHint="@color/textHitColor2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="outDetailRealEndTimeBtn"
                    android:focusableInTouchMode="false"
                    android:imeOptions="actionNext"
                   />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/outInfoRecyclerLine"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="批准人"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/out_detail_okPerson"
                    android:layout_weight="1"
                    android:background="@null"
                    android:lines="1"
                    android:singleLine="true"
                    android:hint="请输入批准人"
                    android:textColorHint="@color/textHitColor2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"/>
                <Spinner
                    android:id="@+id/out_detail_okPerson_spinner"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          出差任务"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/outinfo_detail">
                <EditText
                    android:id="@+id/out_detail_task"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:enabled="true"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:minLines="8"
                    android:maxLines="10"
                    android:background="@null"
                    android:hint="请输入出差任务"
                    android:textColorHint="@color/textHitColor2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:imeOptions="actionDone"
                />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_btn_linear_layout"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <Button
                android:layout_weight="1"
                android:id="@+id/out_detail_editBtn"
                android:onClick="editData"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:text="@string/out_detail_button_edit_name"
                android:textColor="@color/OutInfoDetailSonBg"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/out_detail_saveBtn"
                android:onClick="saveData"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:text="@string/out_detail_button_save_name"
                android:textColor="@color/OutInfoDetailSonBg"/>
        </LinearLayout>


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
