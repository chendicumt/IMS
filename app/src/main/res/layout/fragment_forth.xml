<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/fragment_forth_toolBar"
                android:background="@drawable/toolbar_line"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay" >
            </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/OutInfoDetailBg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_weight="3"
            android:orientation="horizontal"
            android:background="@color/OutInfoDetailSonBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
             <LinearLayout
                 android:layout_weight="2"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center">
                 <LinearLayout
                     android:background="@drawable/my_photo_style"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">

                     <ImageView
                         android:src="@drawable/photo"
                         android:layout_width="80dp"
                         android:layout_height="80dp"/>
                 </LinearLayout>

             </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:gravity="center_vertical">

                 <LinearLayout
                     android:layout_weight="1"
                     android:orientation="vertical"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <TextView
                         android:id="@+id/user_name"
                         android:layout_margin="5dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textSize="18sp"/>
                     <TextView
                         android:id="@+id/user_jobNum"
                         android:layout_margin="5dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         />
                 </LinearLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <!--<ImageView
                        android:id="@+id/edit_user_info"
                        android:src="@drawable/go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>-->


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_weight="3.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/OutInfoDetailBg"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/my_out_info"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/OutInfoDetailSonBg"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    >
                    <ImageView
                        android:layout_weight="7"
                        android:src="@drawable/tab1_seleced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="    我的出差" android:textSize="18sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/outInfoRecyclerLine"/>
                <LinearLayout
                    android:id="@+id/my_leave_info"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/OutInfoDetailSonBg"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <ImageView
                        android:layout_weight="7"
                        android:src="@drawable/tab2_seleced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="    我的请假" android:textSize="18sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/outInfoRecyclerLine"/>
                <LinearLayout
                    android:id="@+id/my_log_info"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/OutInfoDetailSonBg"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <ImageView
                        android:layout_weight="7"
                        android:src="@drawable/tab3_selected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="    我的日志" android:textSize="18sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/outInfoRecyclerLine"/>
                <LinearLayout
                    android:id="@+id/my_team"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/OutInfoDetailSonBg"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <ImageView
                        android:layout_weight="7"
                        android:src="@drawable/team"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="    我的团队" android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>
        </LinearLayout>

